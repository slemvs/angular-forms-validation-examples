{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "./src", // This must be specified if "paths" is.
    "paths": {
      "*": [
        "*",
        "app/*",
        "app/complex-form/*",
        "app/simple-form/*",
        "app/form-validations/*",
        "app/tab/*",
        "app/tabs/*"
      ]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
